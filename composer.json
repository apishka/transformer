{
    "name": "apishka/transformer",
    "description": "Validator and sanitizer",
    "keywords": ["sanitizer", "validator"],
    "license": "MIT",
    "authors": [
        {
            "name": "Evgeny Reykh",
            "email": "evgeny@reykh.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "apishka/easy-extend": "*",
        "apishka/singleton": "^1.0.1",
        "nesbot/carbon": "^1.21",
        "egulias/email-validator": "<2.1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0.6",
        "apishka/cs": "^1.0.0",
        "giggsey/libphonenumber-for-php": "^8.3.0"
    },
    "suggest": {
        "giggsey/libphonenumber-for-php": "To use \\Apishka\\Transformer\\Transform\\Phone"
    },
    "autoload": {
        "psr-4": {
            "Apishka\\Transformer\\": "source"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ApishkaTest\\Transformer\\": "tests"
        }
    }
}
